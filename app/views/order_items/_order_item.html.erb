
<div class="mx-auto md:w-2/3 w-full">
  <table class="my-5 w-full border-collapse">
    <tr>
      <td class="border border-gray-300 py-2 px-4 font-bold">Pedido</td>
      <td class="border border-gray-300 py-2 px-4 font-bold">Prato</td>
      <td class="border border-gray-300 py-2 px-4 font-bold">Valor</td>
      <td class="border border-gray-300 py-2 px-4 font-bold">Preço unitário</td>
      <% if action_name != "show" %>
      <td class="border border-gray-300 py-2 px-4 font-bold">Editar</td>
      <td class="border border-gray-300 py-2 px-4 font-bold">Ver</td>
      <% end %>
    </tr>
    <tr>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order_item.order_id %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order_item.dish.name %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order_item.amount %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order_item.unit_price %></td>
      <% if action_name != "show" %>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= link_to 'Editar', edit_order_path(order_item), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= link_to 'Ver', order_item, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %></td>
        <% end %>
    </tr>
  </table>
</div>


