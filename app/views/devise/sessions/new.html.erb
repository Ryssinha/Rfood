<div class="mx-auto md:w-2/3 w-full">
  <div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-full max-w-md space-y-8">
      <div>
        <h2 class="mt-6 text-center text-2xl font-bold tracking-tight text-gray-900">Fa√ßa login em sua conta</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-8 space-y-6" }) do |f| %>
        <div class="-space-y-px rounded-md shadow-sm">
          <div>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "relative block w-full rounded-md border-0 py-2 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Email address" %>
          </div>
          <div>
            <%= f.label :password, "SenhaF", class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "relative block w-full rounded-md border-0 py-2 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Password" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, class: 'h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600' %>
              <%= f.label :remember_me, class: 'ml-2 block text-sm text-gray-900' %>
            <% end %>
          </div>

          <div class="text-sm">
            <%= link_to "Esqueceu sua senha?", new_user_password_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          </div>
        </div>

        <div class="flex justify-between">
          <button type="submit" class="group relative flex w-full justify-center rounded-md bg-black text-black px-3 py-2 text-sm font-semibold hover:bg-gray-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
              </svg>
            </span>
            Entrar
          </button>

          <%= link_to "Crie sua conta", new_user_registration_path, class: "group relative flex items-center justify-center w-full ml-4 rounded-md bg-indigo-500 text-black px-3 py-2 text-sm font-semibold hover:bg-indigo-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
