<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= order.customer_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Delivery address:</strong>
    <%= order.delivery_address_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total price:</strong>
    <%= order.total_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= order.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Freight price:</strong>
    <%= order.freight_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Coupon:</strong>
    <%= order.coupon_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this order", order, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this order', edit_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
