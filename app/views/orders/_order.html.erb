<div class="mx-auto md:w-2/3 w-full">
  <table class="my-5 w-full border-collapse">
    <tr>
      <th class="border border-gray-300 py-2 px-4">Cod</th>
      <th class="border border-gray-300 py-2 px-4">Cliente</th>
      <th class="border border-gray-300 py-2 px-4">Valor Total</th>
      <th class="border border-gray-300 py-2 px-4">Status</th>
      <th class="border border-gray-300 py-2 px-4">Editar</th>
    </tr>
    <tr>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order.id %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order.customer.user.name %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order.total_price %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= order.status %></td>
      <td class="border border-gray-300 py-2 px-4 text-center"><%= link_to 'Editar', edit_order_path(order), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %></td>
    </tr>
  </table>
</div>






